<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/reaction_viewer"
            android:layout_above="@+id/cancel_button"
    />
    <Button
            android:id="@+id/cancel_button"
            android:text="@string/cast_tracks_chooser_dialog_cancel"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            style="@style/Widget.AppCompat.Button.Borderless"

            />
    <EditText
            android:id="@+id/emoji_search_box"
            android:layout_width="match_parent" android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@id/cancel_button"
            android:layout_below="@+id/reaction_viewer"
            />
</RelativeLayout>